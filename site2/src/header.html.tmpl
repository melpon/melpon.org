<% c++ #include "header.h" %>
<% skin melpon_org %>
<% view header uses content::header %>

<% template render() %>
<header>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="brand" href="<% url "root" %>">melpon.org</a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <% foreach header in headers.array() %>
              <% item %>
                <li
                  <% if (header["name"].str() == content.header_name) %>
                    class="active"
                  <% end %>
                >
                  <a href="<% c++ content.app().mapper().map(out(), header["map"].str()); %>">
                    <%= header | ext getstr("name") %>
                  </a>
                </li>
              <% end item %>
            <% end foreach %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>
<% end template %>

<% end view %>
<% end skin %>
